<div class="container">
    <table class="table table-hover table-striped table-bordered">
        <caption>List of House Hunters</caption>
        <thead class="thead-dark">
            <tr>
                <th class="header">Name</th>
                <th class="header">Email</th>
                <th class="header">Phone Number</th>
                <th class="header">Preferred Contact</th>
                <th class="header" colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @hunters.each do |u| %>
                <tr>
                    <td><%= u.name %></td>

                    <td>
                        <a href="mailto:<%= u.email %>" target="_blank"><%= u.email %></a>
                    </td>
                    <td>
                        <a href="call:<%= u.phone %>" target="_blank"><%= u.phone %></a>
                    </td>
                    <td>
                        <%= u.prefcon == 0 ? "Email" : "Phone" %>
                    </td>
                    <td>
                        <%= link_to "Edit", edit_hunter_path(u), :class => "btn btn-success" %>
                    </td>
                    <td>
                        <%= button_to "Delete", hunter_path(u),
                            method: :delete,
                            data: { confirm: "Are you sure?" },
                            :class => "btn btn-danger" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= button_to "Create", new_hunter_path, method: :get, :class => "btn btn-primary" %>
</div>